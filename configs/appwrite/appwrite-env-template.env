# ======================================
# APPWRITE COMPREHENSIVE .ENV TEMPLATE
# ======================================
# Complete environment configuration for all Appwrite APIs and services
# Use this template for all projects requiring Appwrite integration

# ======================================
# CORE APPWRITE CONFIGURATION
# ======================================
APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=YOUR_PROJECT_ID_HERE

# Frontend/Vite specific (add VITE_ prefix for browser access)
VITE_APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=YOUR_PROJECT_ID_HERE

# React/Next.js specific (add REACT_APP_ or NEXT_PUBLIC_ prefix)
REACT_APP_APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
REACT_APP_APPWRITE_PROJECT_ID=YOUR_PROJECT_ID_HERE
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=YOUR_PROJECT_ID_HERE

# ======================================
# SERVER-SIDE AUTHENTICATION
# ======================================
APPWRITE_API_KEY=YOUR_SERVER_API_KEY_HERE
APPWRITE_SECRET_KEY=YOUR_SECRET_KEY_HERE
APPWRITE_JWT_SECRET=YOUR_JWT_SECRET_HERE

# ======================================
# DATABASE CONFIGURATION
# ======================================
APPWRITE_DATABASE_ID=default
VITE_APPWRITE_DATABASE_ID=default
REACT_APP_APPWRITE_DATABASE_ID=default
NEXT_PUBLIC_APPWRITE_DATABASE_ID=default

# Custom database names for specific projects
APPWRITE_MAIN_DATABASE_ID=main_db
APPWRITE_USER_DATABASE_ID=user_data
APPWRITE_CONTENT_DATABASE_ID=content_db
APPWRITE_ANALYTICS_DATABASE_ID=analytics_db

# ======================================
# COLLECTION CONFIGURATION
# ======================================
# Users and Authentication
APPWRITE_USERS_COLLECTION_ID=users
APPWRITE_PROFILES_COLLECTION_ID=profiles
APPWRITE_SESSIONS_COLLECTION_ID=sessions
APPWRITE_PERMISSIONS_COLLECTION_ID=permissions

# Content Management
APPWRITE_POSTS_COLLECTION_ID=posts
APPWRITE_COMMENTS_COLLECTION_ID=comments
APPWRITE_CATEGORIES_COLLECTION_ID=categories
APPWRITE_TAGS_COLLECTION_ID=tags

# E-commerce/Trading (for trading-post project)
APPWRITE_PRODUCTS_COLLECTION_ID=products
APPWRITE_ORDERS_COLLECTION_ID=orders
APPWRITE_TRANSACTIONS_COLLECTION_ID=transactions
APPWRITE_INVENTORY_COLLECTION_ID=inventory

# Chat/Messaging (for recursion-chat project)
APPWRITE_MESSAGES_COLLECTION_ID=messages
APPWRITE_CHANNELS_COLLECTION_ID=channels
APPWRITE_CONVERSATIONS_COLLECTION_ID=conversations

# Gaming (for slumlord project)
APPWRITE_GAME_SESSIONS_COLLECTION_ID=game_sessions
APPWRITE_PLAYER_STATS_COLLECTION_ID=player_stats
APPWRITE_GAME_WORLDS_COLLECTION_ID=game_worlds

# ======================================
# STORAGE CONFIGURATION
# ======================================
APPWRITE_STORAGE_BUCKET_ID=default
VITE_APPWRITE_STORAGE_BUCKET_ID=default

# Specific storage buckets
APPWRITE_IMAGES_BUCKET_ID=images
APPWRITE_DOCUMENTS_BUCKET_ID=documents
APPWRITE_AVATARS_BUCKET_ID=avatars
APPWRITE_UPLOADS_BUCKET_ID=uploads
APPWRITE_MEDIA_BUCKET_ID=media
APPWRITE_ASSETS_BUCKET_ID=assets

# ======================================
# FUNCTIONS CONFIGURATION
# ======================================
# Function IDs for serverless functions
APPWRITE_AUTH_FUNCTION_ID=auth-handler
APPWRITE_EMAIL_FUNCTION_ID=email-sender
APPWRITE_PAYMENT_FUNCTION_ID=payment-processor
APPWRITE_IMAGE_FUNCTION_ID=image-processor
APPWRITE_NOTIFICATION_FUNCTION_ID=notifications
APPWRITE_WEBHOOK_FUNCTION_ID=webhook-handler
APPWRITE_CLEANUP_FUNCTION_ID=cleanup-tasks
APPWRITE_ANALYTICS_FUNCTION_ID=analytics-processor

# ======================================
# SITES/HOSTING CONFIGURATION
# ======================================
APPWRITE_SITE_ID=YOUR_SITE_ID_HERE
APPWRITE_DOMAIN=your-domain.appwrite.network
APPWRITE_CUSTOM_DOMAIN=your-custom-domain.com

# ======================================
# OAUTH PROVIDERS
# ======================================
# Google OAuth
APPWRITE_OAUTH_GOOGLE_ID=google
APPWRITE_OAUTH_GOOGLE_SECRET=YOUR_GOOGLE_SECRET

# GitHub OAuth
APPWRITE_OAUTH_GITHUB_ID=github
APPWRITE_OAUTH_GITHUB_SECRET=YOUR_GITHUB_SECRET

# Discord OAuth
APPWRITE_OAUTH_DISCORD_ID=discord
APPWRITE_OAUTH_DISCORD_SECRET=YOUR_DISCORD_SECRET

# Facebook OAuth
APPWRITE_OAUTH_FACEBOOK_ID=facebook
APPWRITE_OAUTH_FACEBOOK_SECRET=YOUR_FACEBOOK_SECRET

# Twitter/X OAuth
APPWRITE_OAUTH_TWITTER_ID=twitter
APPWRITE_OAUTH_TWITTER_SECRET=YOUR_TWITTER_SECRET

# Apple OAuth
APPWRITE_OAUTH_APPLE_ID=apple
APPWRITE_OAUTH_APPLE_SECRET=YOUR_APPLE_SECRET

# Microsoft OAuth
APPWRITE_OAUTH_MICROSOFT_ID=microsoft
APPWRITE_OAUTH_MICROSOFT_SECRET=YOUR_MICROSOFT_SECRET

# ======================================
# OAUTH CALLBACK URLS
# ======================================
APPWRITE_OAUTH_SUCCESS_URL=https://your-domain.com/auth/success
APPWRITE_OAUTH_FAILURE_URL=https://your-domain.com/auth/error
APPWRITE_OAUTH_CALLBACK_URL=https://your-domain.com/auth/callback

# Frontend-specific OAuth URLs
VITE_APPWRITE_OAUTH_SUCCESS_URL=https://your-domain.com/auth/success
VITE_APPWRITE_OAUTH_FAILURE_URL=https://your-domain.com/auth/error
REACT_APP_OAUTH_SUCCESS_URL=https://your-domain.com/auth/success
REACT_APP_OAUTH_FAILURE_URL=https://your-domain.com/auth/error

# ======================================
# EMAIL/SMS CONFIGURATION
# ======================================
APPWRITE_SMTP_HOST=smtp.your-provider.com
APPWRITE_SMTP_PORT=587
APPWRITE_SMTP_USERNAME=your-smtp-username
APPWRITE_SMTP_PASSWORD=your-smtp-password
APPWRITE_FROM_EMAIL=noreply@your-domain.com
APPWRITE_FROM_NAME=Your App Name

# SMS providers
APPWRITE_SMS_PROVIDER=twilio
APPWRITE_TWILIO_SID=your-twilio-sid
APPWRITE_TWILIO_AUTH_TOKEN=your-twilio-token
APPWRITE_TWILIO_FROM_NUMBER=+1234567890

# ======================================
# REAL-TIME CONFIGURATION
# ======================================
APPWRITE_REALTIME_ENABLED=true
VITE_APPWRITE_REALTIME_ENABLED=true

# WebSocket configuration
APPWRITE_WS_ENDPOINT=wss://nyc.cloud.appwrite.io/v1/realtime
VITE_APPWRITE_WS_ENDPOINT=wss://nyc.cloud.appwrite.io/v1/realtime

# ======================================
# DEPLOYMENT CONFIGURATION
# ======================================
# GitHub Actions secrets (for deployment workflows)
APPWRITE_DEPLOYMENT_KEY=your-deployment-api-key
GITHUB_TOKEN=your-github-token

# Build configuration
NODE_ENV=production
BUILD_ENV=production
VITE_BUILD_ENV=production

# ======================================
# SECURITY CONFIGURATION
# ======================================
# CORS origins (comma-separated)
APPWRITE_CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://localhost:3000

# Security headers
APPWRITE_SECURITY_HEADERS=true
APPWRITE_RATE_LIMITING=true
APPWRITE_RATE_LIMIT_REQUESTS=60
APPWRITE_RATE_LIMIT_WINDOW=60

# ======================================
# LOGGING & MONITORING
# ======================================
APPWRITE_LOG_LEVEL=info
APPWRITE_ENABLE_LOGGING=true
APPWRITE_ANALYTICS_ENABLED=true

# Third-party monitoring
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# ======================================
# DEVELOPMENT CONFIGURATION
# ======================================
# Development-specific settings (set differently in .env.development)
DEV_MODE=false
DEBUG_MODE=false
APPWRITE_DEV_ENDPOINT=http://localhost/v1
APPWRITE_DEV_PROJECT_ID=dev-project-id

# Local development ports
DEV_PORT=3000
API_PORT=8000
WEBSOCKET_PORT=8001

